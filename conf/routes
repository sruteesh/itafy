# Home page
# =========
GET  /                    controllers.TwitterController.testAction()
GET  /onlive              controllers.TwitterController.onLive()
GET  /demo/index          controllers.Assets.at(path="/public/html", file="index-demo.html")
GET  /demo/localindex     controllers.Assets.at(path="/public/html", file="index-localdemo.html")

# API
# ===
GET  /api/                controllers.api.HelpController.index()
GET  /api/help            controllers.api.HelpController.help()

# GeoTweet
# --------
GET  /api/geotweets/                   controllers.api.GeoTweetController.index()
GET  /api/geotweets/help               controllers.api.GeoTweetController.help()
GET  /api/geotweets/all                controllers.api.GeoTweetController.listAll()
GET  /api/geotweets/area               controllers.api.HelpController.listAreas()
GET  /api/geotweets/area/:area         controllers.api.GeoTweetController.area(area: String)
GET  /api/geotweets/category           controllers.api.HelpController.listCategories()
GET  /api/geotweets/category/:category controllers.api.GeoTweetController.category(category: String)
GET  /api/geotweets/show/:id           controllers.api.GeoTweetController.show(id: String)

